<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_principal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="25dp"
    android:paddingRight="20dp"
    android:paddingBottom="30dp"
    android:paddingLeft="20dp"
    tools:context="com.losjuanes.ipfinder.presentacion.vistas.PrincipalActivity">

    <ImageView
        android:layout_width="250dp"
        android:layout_height="210dp"
        android:layout_gravity="center"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:src="@drawable/logo_uam_csh"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:text="@string/msj_principal"
        android:textAlignment="center"
        android:textSize="20dp"
        android:gravity="center"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/btnConsultaIP"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_gravity="center_horizontal"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_marginTop="25dp"
        android:text="@string/btn_consultaIP"/>

    <Button
        android:id="@+id/btnConsultaCubiculo"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_gravity="center_horizontal"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_marginTop="10dp"
        android:text="@string/btn_consultaCubiculo"
        />

</LinearLayout>
