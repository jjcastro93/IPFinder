<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_busqueda_ip"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.losjuanes.ipfinder.presentacion.vistas.BusquedaIPActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:weightSum="1">

        <TextView
            android:layout_weight=".3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:gravity="end|center_vertical"
            android:text="148.206."/>

        <EditText
            android:id="@+id/et_IP"
            android:layout_weight=".3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:digits="1234567890."
            android:hint="000.000"
            android:inputType="numberDecimal"
            android:maxLength="7"/>

        <Button
            android:id="@+id/btn_buscar"
            android:layout_weight=".4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="buscar"
            android:textStyle="bold"
            android:background="@color/colorPrimaryDark"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_tituloIPCubiculo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:gravity="center_horizontal"
        android:textSize="25sp"
        android:textColor="#ffffff"/>

    <TextView
        android:id="@+id/tv_IPCubiculo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:gravity="center_horizontal"
        android:textSize="25sp"/>

    <TextView
        android:id="@+id/tv_tituloIPNodo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:textSize="25sp"
        android:textColor="#ffffff"/>

    <TextView
        android:id="@+id/tv_IPNodo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:gravity="center_horizontal"
        android:textSize="25sp"/>

    <TextView
        android:id="@+id/tv_tituloIPUsuario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:textSize="25sp"
        android:textColor="#ffffff"/>

    <TextView
        android:id="@+id/tv_IPUsuario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:gravity="center_horizontal"
        android:textSize="25sp"/>
</LinearLayout>
